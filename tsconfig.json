{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node 16",

    "compilerOptions": {
        "lib": ["es2020", "dom"],
        "module": "commonjs",
        "target": "ES2020",
        "sourceMap": true,
        "outDir": "./out-tsc",
        "experimentalDecorators": true,

        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node"
    },
    "exclude": [
        "node_modules"
    ]
}